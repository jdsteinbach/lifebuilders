<!DOCTYPE html>
<html class="no-js">

<head>
  <meta charset="utf-8">
  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{ site_title }} | {{ title }}</title>
  <meta name="description" content="{{ description }}">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="{{ layout }}">
  <div class="site">
    <header id="masthead" class="site-header">
      <div class="site-title"><a href="{{ site.base_url }} ">{{ site.site_title }}</a></div>
      <button id="menu-toggle" class="menu-toggle">Menu</button>
      <nav id="menu" class="menu">
        {% include _nav %}
      </nav>
    </header>
    <div id="content" class="site-content">
      <h1 class="page-title">{{ title }}{% if subtitle %} - {{ subtitle }}{% endif %}</h1>

      {{ content }}
    </div>
    <footer id="colophon" class="site-footer">
      <p>&copy; {{ site.first_year }}&ndash;{{ site.current_year }} James Steinbach. All rights reserved.</p>
    </footer>
  </div>
  <script>
    var html = document.querySelector('html');
    var toggle = document.getElementById('menu-toggle');
    var menu = document.getElementById('menu');

    html.classList.add('js');
    html.classList.remove('no-js');

    toggle.addEventListener('click', function(e) {
      e.preventDefault();
      menu.classList.toggle('active');
    });
  </script>
</body>
</html>
