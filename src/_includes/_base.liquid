<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ description }}">
    <title>{{ site.site_title }}
      |
      {{ title }}
    </title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body class="{{ layout }}">
    <header id="masthead" class="site-header">
      <div class="site-header__title">
        <a href="{{ site.base_url }} ">{{ site.site_title }}
        </a>
      </div>
      <button id="menu-toggle" class="site-header__nav-toggle">Menu</button>
      <nav id="menu" class="site-header__nav">
        {% include "_nav" %}
      </nav>
    </header>

    <article id="content" class="site-content">
      <header class="site-content__header">
        <h1 class="site-content__title">{{ title }}
          {% if subtitle %}
            -
            {{ subtitle }}
          {% endif %}
        </h1>
      </header>

      <section class="site-content__content">
        {{ content }}
      </section>
    </article>

    <footer id="colophon" class="site-footer">
      <p>&copy;
        {{ site.first_year }}
        &ndash;{{ site.current_year }}
        {{ site.site_author }}
        . All rights reserved.</p>
    </footer>

    <script>
      var html = document.querySelector('html');
      var toggle = document.getElementById('menu-toggle');
      var menu = document.getElementById('menu');

      html.classList.add('js');
      html.classList.remove('no-js');

      toggle.addEventListener('click', function(e) {
        e.preventDefault();
        menu.classList.toggle('active');
      });
    </script>
  </body>
</html>
